<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activity_for_8_lab">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/siba" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_povorot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_povorot"
            android:text="Поворот" />

        <Button
            android:id="@+id/button_translasiya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_translasiya"
            android:text="Трансляция" />

        <Button
            android:id="@+id/button_alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_alpha"
            android:text="Альфа" />

        <Button
            android:id="@+id/button_mashtab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_mashtab"
            android:text="Масштаб" />
    </LinearLayout>

</LinearLayout>